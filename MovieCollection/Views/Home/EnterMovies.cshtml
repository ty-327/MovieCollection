@{
    ViewData["Title"] = "Joel Hilton Collection -- Enter a Movie";
}

@model EnterMovieModel;

<div class="text-center">
    <h1 class="display-4">Enter a Movie</h1>
    <p>Use the form below to enter a movie:</p>

    <form method="post">
        <label>Category:</label>
        <select id="movCategory" asp-for="CategoryID">
            <option value="">Select a Category: </option>
            @foreach (Category c in ViewBag.CategoriesList)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>

        <br />
        <label>Title: </label>
        <input id="movTitle" asp-for="Title" /><br />

        <label>Year: </label>
        <input id="movYear" asp-for="Year" /><br />

        <label>Director: </label>
        <input id="movDirector" asp-for="Director" /><br />

        <label>Rating: </label>
        <select asp-for="Rating">
            <option id="ratingG">G</option>
            <option id="ratingPG">PG</option>
            <option id="ratingPG-13">PG-13</option>
            <option id="ratingR">R</option>
        </select>
        <br />

        <label>Edited (Yes/No): </label>
        <select asp-for="Edited">
            <option value="true" id="editedYes">Yes</option>
            <option value="false" id="editedNo">No</option>
        </select>
        <br />

        <label>Lent To: </label>
        <input id="movLentTo" asp-for="Lent_To" /><br />

        <label>Notes: </label>
        <input id="movNotes" asp-for="Notes" maxlength="25" /><br />

        <input id="submitBtn" type="submit" value="Enter Movie" />

        <!--Display error messages per data validation parameters-->
        <div asp-validation-summary="All"></div>

    </form>
</div>